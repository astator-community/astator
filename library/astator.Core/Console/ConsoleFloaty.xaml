<?xml version="1.0" encoding="utf-8" ?>
<Grid
    x:Class="astator.Core.ConsoleFloaty"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    BackgroundColor="{DynamicResource PrimaryColor}">

    <Label
        x:Name="Title"
        Margin="15,5"
        FontAttributes="Bold"
        FontSize="20"
        HorizontalOptions="Start"
        TextColor="{DynamicResource SecondaryColor}"
        VerticalOptions="Center" />

    <ScrollView
        x:Name="OutputScrollView"
        Grid.Row="1"
        Padding="10,5">
        <VerticalStackLayout x:Name="OutputLayout" Grid.Row="1">
            <VerticalStackLayout.Resources>
                <Style TargetType="Label">
                    <Setter Property="FontFamily" Value="CascadiaCode" />
                    <Setter Property="FontSize" Value="14" />
                    <Setter Property="TextColor" Value="{DynamicResource SecondaryColor}" />
                    <Setter Property="Margin" Value="0,0,0,3" />
                </Style>
            </VerticalStackLayout.Resources>
        </VerticalStackLayout>
    </ScrollView>

    <Grid
        x:Name="InputGrid"
        Grid.Row="2"
        Padding="10,5">
        <Editor
            x:Name="Input"
            AutoSize="TextChanges"
            FontSize="18"
            PlaceholderColor="#2F88FF"
            TextChanged="Input_TextChanged"
            TextColor="{DynamicResource SecondaryColor}"
            VerticalTextAlignment="Center" />
        <Button
            x:Name="Send"
            Grid.Column="1"
            BackgroundColor="Transparent"
            Clicked="Send_Clicked"
            FontSize="16"
            IsEnabled="False"
            Text="发送"
            TextColor="{DynamicResource SecondaryColor}" />
    </Grid>
</Grid>